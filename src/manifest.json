{
  "manifest_version": 3,
  "name": "ChatSeed",
  "version": "3.0.0",
  "description": "Cross-platform AI chat and text saving with total privacyâ€”no cloud, no tracking.",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "homepage_url": "https://revlytiq.io/ChatSeed",
  "permissions": [
    "storage",
    "activeTab",
    "downloads",
    "contextMenus"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*"
      ],
      "js": [
        "contentScript.bundle.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contextMenuContent.bundle.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ChatSeed - Save and Bridge AI Conversations",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.bundle.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "*.js",
        "*.css",
        "floating-button.png",
        "refresh-button.png",
        "icon-trash.png",
        "icon-logo.png",
        "icon-plus.png",
        "icon-bookmark.png",
        "icon-team.png",
        "icon-account.png",
        "icon-flag.png",
        "icon-searchglass.png",
        "icon-gemini.png",
        "icon-gpt.png",
        "icon-gpt-transp.png",
        "icon-export-single.png",
        "icon-edit.png",
        "icon-emptystate.png",
        "icon-export.png",
        "icon-favorite.png",
        "icon-filter.png",
        "icon-insert.png",
        "icon-persona-analyst.png",
        "icon-persona-executive.png",
        "icon-persona-standard.png",
        "icon-persona-teammate.png"
      ],
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*"
      ]
    }
  ]
}